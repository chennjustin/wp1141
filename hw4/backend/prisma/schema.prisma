generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  email      String     @unique
  password   String
  createdAt  DateTime   @default(now())
  folders    Folder[]
  places     Place[]
  entries    Entry[]
}

