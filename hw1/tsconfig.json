{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "./dist",      
    "rootDir": "./",         
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "home/**/*.ts",
    "about/**/*.ts",
    "travel/**/*.ts",
    "contact/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
