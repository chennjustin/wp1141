// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================================================
// USER + NEXTAUTH STRUCTURE
// =========================================================

model User {
  id             String   @id @default(cuid())
  userID         String?  @unique        
  name           String
  email          String?
  emailVerified  DateTime?
  image          String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Remember user's last chosen wallet
  defaultWalletId String?
  defaultWallet   Wallet? @relation("DefaultWallet", fields: [defaultWalletId], references: [id])

  // NextAuth relations
  accounts   Account[]
  sessions   Session[]


  walletUsers     WalletUser[]
  createdTransactions Transaction[] @relation("UserCreatedTransactions")
  transactionPayers  TransactionPayer[]
  transactionShares  TransactionShare[]
  notifications      Notification[]
  tags               Tag[] @relation("UserCreatedTags")
  subscriptions      Subscription[]
  deviceCarriers     DeviceCarrier[]

  @@index([userID])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime

  @@index([userId])
}


// =========================================================
// WALLET STRUCTURE
// =========================================================

model Wallet {
  id        String   @id @default(cuid())
  name      String
  defaultCurrency String @default("TWD")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members        WalletUser[]
  transactions   Transaction[]
  subscriptions  Subscription[]

  // reverse relation for default wallet
  defaultUsers User[] @relation("DefaultWallet")
}

model WalletUser {
  id        String     @id @default(cuid())

  walletId  String
  userId    String
  role      WalletRole @default(MEMBER)

  wallet    Wallet     @relation(fields: [walletId], references: [id])
  user      User       @relation(fields: [userId], references: [id])

  @@unique([walletId, userId])
}

enum WalletRole {
  OWNER
  MEMBER
  VIEWER
}


// =========================================================
// TAGS 
// =========================================================

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique

  // system user or normal user (NOT NULL)
  createdBy String
  createdAt DateTime @default(now())

  creator   User @relation("UserCreatedTags", fields: [createdBy], references: [id])

  transactions Transaction[]
}


// =========================================================
// TRANSACTIONS
// =========================================================

model Transaction {
  id            String     @id @default(cuid())
  walletId      String
  createdById   String

  date          DateTime
  amount        Float
  currency      String
  rateToNTD     Float?
  name          String? @db.Text
  note          String? @db.Text

  tagId         String?
  tag           Tag? @relation(fields: [tagId], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  wallet        Wallet    @relation(fields: [walletId], references: [id])
  createdBy     User      @relation("UserCreatedTransactions", fields: [createdById], references: [id])

  payers        TransactionPayer[]
  shares        TransactionShare[]
  subscriptionHistories SubscriptionHistory[]
}

model TransactionPayer {
  id            String      @id @default(cuid())
  transactionId String
  payerId       String
  paidAmount    Float

  transaction   Transaction @relation(fields: [transactionId], references: [id])
  payer         User        @relation(fields: [payerId], references: [id])
}

model TransactionShare {
  id            String      @id @default(cuid())
  transactionId String
  userId        String
  shareAmount   Float

  transaction   Transaction @relation(fields: [transactionId], references: [id])
  user          User        @relation(fields: [userId], references: [id])
}


// =========================================================
// SUBSCRIPTION + EXECUTION HISTORY
// =========================================================

model Subscription {
  id            String    @id @default(cuid())
  walletId      String
  userId        String

  amount        Float
  currency      String
  label         String
  nextBilling   DateTime
  intervalMonths Int      @default(1)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  wallet        Wallet    @relation(fields: [walletId], references: [id])
  user          User      @relation(fields: [userId], references: [id])

  histories     SubscriptionHistory[]
}

model SubscriptionHistory {
  id             String        @id @default(cuid())
  subscriptionId String
  transactionId  String?
  status         BillingStatus @default(SUCCESS)
  message        String? @db.Text
  runAt          DateTime @default(now())

  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  transaction    Transaction? @relation(fields: [transactionId], references: [id])
}

enum BillingStatus {
  SUCCESS
  FAILED
  SKIPPED
}


// =========================================================
// NOTIFICATION
// =========================================================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      NotificationType
  message   String  @db.Text
  isRead    Boolean @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

enum NotificationType {
  REPAYMENT
  SUBSCRIPTION_REMINDER
  SHARED_WALLET_UPDATE
}


// =========================================================
// DEVICE CARRIER (載具)
// =========================================================

model DeviceCarrier {
  id          String   @id @default(cuid())
  userId      String
  carrierCode String
  carrierType String @default("PHONE_BARCODE")

  createdAt   DateTime @default(now())

  user        User   @relation(fields: [userId], references: [id])
}
